{
  "appId": "com.yourdoamnin.yourapp",
  "directories": {
    "buildResources": "resources"
  },
  "files": [
    "assets/**/*",
    "build/**/*",
    "capacitor.config.*",
    "app/**/*"
  ],
  "publish": {
    "provider": "github"
  },
  "nsis": {
    "allowElevation": true,
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "win": {
    "target": "zip",
    "icon": "assets/appIcon.ico",
    "artifactName": "XaXiMapper-${arch}.${ext}",
    "signAndEditExecutable": false
  },
  "mac": {
    "category": "your.app.category.type",
    "target": "dmg",
    "artifactName": "XaXiMapper-v${version}-Mac-${arch}.${ext}"
  }
}